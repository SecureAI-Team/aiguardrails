# ================================================
# AI GuardRails 环境配置模板
# 复制此文件为 .env 并修改配置
# ================================================

# 数据库
POSTGRES_DB=aiguardrails
POSTGRES_USER=app
POSTGRES_PASSWORD=your-strong-password-here

# Redis
REDIS_PASSWORD=your-redis-password-here
REDIS_NAMESPACE=aiguardrails

# 管理员凭证 (首次启动时自动创建)
ADMIN_TOKEN=your-admin-api-token
ADMIN_JWT_SECRET=your-32-char-jwt-secret-key-here
ADMIN_BOOT_USER=admin@example.com
ADMIN_BOOT_PASSWORD=YourSecurePassword123!

# 服务端口
HTTP_PORT=80
HTTPS_PORT=443

# 域名 (可选，用于SSL证书申请)
DOMAIN=your-domain.com

# CORS允许的源
ALLOWED_ORIGINS=*

# OPA策略引擎
OPA_ENABLED=true
OPA_REGO_PATH=opa/policies

# ============ 通义千问内容审核 (可选) ============
# QWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1/services/aigc/text-moderation
# QWEN_API_TOKEN=your-qwen-api-token
# QWEN_MODEL=qwen-moderation
# QWEN_TIMEOUT_SEC=8

# ============ 微信登录 (可选) ============
